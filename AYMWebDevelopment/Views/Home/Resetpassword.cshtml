@model AYMWebDevelopment.Areas.AllMyAPI.Data.ForLoginDataEmail
@using CaptchaMvc.HtmlHelpers

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout5.cshtml";
    //Layout = null;
}

<div class="resetpassword1">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*<hr />*@
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.loginemail, "", new { @class = "text-danger" })
            @if (ViewBag.message != null)
            {
                <span style="color:red">
                    @ViewBag.message
                </span>
            }
            <br />
            <br />
        </div>

        <div>
            @Html.LabelFor(model => model.loginemail, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.loginemail, new { htmlAttributes = new { @class = "form-control col-md-3", @id = "loginemail", @required = "required" } })
            <span> @Html.MathCaptcha() </span>
            <br />
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reset Password" class="btn btn-outline-success" />
            </div>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $("#CaptchaInputText").addClass("form-control col-md-3");
        $("#loginemail").attr('autocomplete', 'off');
    });
</script>